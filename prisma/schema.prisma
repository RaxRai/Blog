model User {
  id                String? @unique @default(uuid())
  createdAt         DateTime @default(now())
  email             String   @unique
  name              String?
  Blogs             Blogs[]
  accessToken       String?
}

model Blogs {
  id                Int      @id @default(autoincrement())
  createdAt         DateTime @default(now())
  updatedAt         DateTime?
  userId            String?
  user              User? @relation(fields: [userId], references: [id])
  title             String
  content           String?
  type              String?
}
